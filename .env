# ================================
# OpenVPN 基本配置
# ================================
OVPN_PORT=1194
OVPN_PROTO=udp
OVPN_DEV=tun0

# ================================
# 网络配置 (IPv4)
# ================================
OVPN_NETWORK=10.8.0.0
OVPN_NETMASK=255.255.255.0
OVPN_DNS_IPV4=8.8.8.8

# ================================
# 证书路径配置
# ================================
OVPN_CA_CERT=/etc/openvpn/certs/ca.crt
OVPN_SERVER_CERT=/etc/openvpn/certs/server.crt
OVPN_SERVER_KEY=/etc/openvpn/certs/server.key
OVPN_DH_PEM=/etc/openvpn/certs/dh.pem

# ================================
# IPv6 配置 (可选)
# ================================
OVPN_IPV6_ENABLE=false
OVPN_IPV6_NETWORK=2001:db8:8::/64
OVPN_IPV6_ROUTE=2001:db8:8::/64
OVPN_DNS_IPV6=2001:4860:4860::8888

# ================================
# 安全配置
# ================================
OVPN_TLS_VERSION=1.2
OVPN_CIPHER=TLS-ECDHE-RSA-WITH-AES-128-GCM-SHA256

# ================================
# 证书生成控制
# ================================
GENERATE_CERTS=true
FORCE_REGENERATE=false

# ================================
# 网络NAT控制
# ================================
ENABLE_IPV4_NAT=true
ENABLE_IPV6_NAT=false

# ================================
# LDAP 配置
# ================================
LDAP_URL=ldap://ldap.example.com:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_PASSWORD=your_ldap_password
LDAP_FILTER=(&(uid=%u)(objectClass=person))
